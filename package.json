    "eslint": "^7.19.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^15.0.0",
    "postcss": "^8.2.13",
    "prettier": "^3.0.0",
    "tailwindcss": "^2.1.2",
    "twin.macro": "^2.4.1",
    "typescript": "^5.0.0"
  }
