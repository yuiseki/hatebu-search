    "dexie": "^3.0.3",
    "flexsearch": "^0.7.0",
    "next": "latest",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rss-parser": "https://github.com/yuiseki/rss-parser.git#rdf-about",
    "tiny-segmenter": "^0.2.0"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.3.0",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^20.0.0",
